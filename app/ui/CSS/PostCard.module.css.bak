/* PostCard.module.css */
.postCardContainer {
  width: 100%;
  height: 100%;
  max-width: 750px;
  bottom: 0px;
  overflow-y: scroll;
  max-height: calc(112vh - 10rem); /* Adjust as needed */
}

.postCard {
  width: 65%;
  margin-left: auto; /* Center horizontally */
  margin-right: auto; /* Center horizontally */
  display: flex;
  margin-bottom: 20px;
  border: 1px solid #ddd;
  border-radius: 8px;
  overflow: hidden;
  background-color: #fff;
}

.bookPicture {
  width: 300px;
  height: 450px;
  flex-shrink: 0;
  background-color: #f0f0f0;
  /* Add additional styling for the book picture */
}

.content {
  flex: 1;
  padding: 20px;
  display: flex;
  flex-direction: column;
}

.title {
  margin-top: 0;
  margin-bottom: 10px;
  font-size: 20px;
}

.author {
  font-size: 16px;
  color: #888;
  margin-bottom: 10px;
}

.review {
  font-size: 16px;
  margin-bottom: 10px;
}

.comments {
  margin-bottom: 10px;
}

.likeButton {
  display: flex;
  align-items: center;
}

.likeButton button {
  background-color: transparent;
  border: none;
  cursor: pointer;
  font-size: 16px;
  color: #888;
  margin-right: 5px;
}

.likeButton button:hover {
  color: #f00;
}

.likeCount {
  font-size: 16px;
  color: #888;
}
