/* components/TopTrendingBooks.module.css */

.container {
  height: 100%;
  width: 200px;
  background-color: #f0f0f0;
  padding: 20px;
  padding-top: 0px;
  z-index: 100;
  border-left: 1px solid #ddd;
}

.container h2 {
  font-size: 18px;
  font-weight: bold;
}

.container ul {
  list-style: none;
  padding: 0;
}

.container li {
  font-size: 16px;
  padding: 8px 0;
  border-bottom: 1px solid #ddd;
}

.container li:last-child {
  border-bottom: none;
}
